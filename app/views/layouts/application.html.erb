<!DOCTYPE html>
<html>
<head>
  <title>Bob</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if @page.present? && @page.name == "Home" %>	
	<div id="container" class="home" >
<% else %>
	<div id="container" class="interior">
<% end %>

	<div id="top">	
		
		<ul id="utility_nav">
				<% if user_signed_in? %>
				    Signed in as <%= current_user.email %>. Not you?
				   <li> <%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
				  <% else %>
				    <li><%= link_to "Sign up", new_user_registration_path %> or <%= link_to "sign in", new_user_session_path %></li>
				  <% end %>
			<%#= render 'devise/menu/login_items' %>
			
			<li><%= link_to "Admin", admin_path %>
			<li><%= link_to "Inbox", inbox_path%>
		</ul>
		<ul id="main_nav">
			<li><%= link_to "Recommend Now!", new_recommendation_path %></li>
			<li><%= link_to "Overview and Timeline", overview_path%></li>
			<li><%= link_to "Awards and Categories", awardcat_path%></li>
		</ul>
		<div class="clear"></div>
	</div>
	
	<div id="limiter">
		<%= yield %>
	</div>


</div>
</body>
</html>
