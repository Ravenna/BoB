<% if mobile? %>
<!DOCTYPE html PUBLIC "-//WAPFORUM//DTD XHTML Mobile 1.0//EN" "http://www.wapforum.org/DTD/xhtml-mobile10.dtd">
<% else %>
<!DOCTYPE html>
<% end %>
<html>
<head>
  <title>Bob</title>
  <% unless mobile? %>
  	<%= stylesheet_link_tag "application"  %>
  <% else %>
  	<%= stylesheet_link_tag "mobile" %>
  <% end %>	

  <%= javascript_include_tag "application" %> 
  <%= csrf_meta_tags %>

</head>
<body>

<% if @page.present? && @page.name == "Home" %>	
	<div id="container" class="home" >
<% else %>
	<div id="container" class="interior">
<% end %>

	<div id="top">	
		
		<ul id="utility_nav">
				<% if user_signed_in? %>
				   <li id="signed_in_as">Signed in as <%= current_user.email %></li>
				   <li> <%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
				<% else %>
				    <li id="sign_up_in"><%= link_to "Sign up", new_user_registration_path %> or <%= link_to "sign in", new_user_session_path %></li>
				<% end %>
				
				<% if current_user.present? && current_user.admin == true %>
					<li><%= link_to "Admin", admin_path %></li>
				<% end %>
				
				<% if current_user.present? %>
					<li>
						<% if @my_recs.present? %>
							<%= link_to "My Rec's", recs_path%></li>
						<% end %>
					<li>
							<% if @approval_value.present? %>
								<%= link_to "In-Box", inbox_path %>
							<% else %>
							
							<% end %>
					</li>
			<% else %><% end %> 
		</ul>
		<ul id="main_nav">
			<li><%= link_to "Recommend Now!", location_path %></li>
			<li><%= link_to "Overview & Timeline", overview_path%></li>
			<li><%= link_to "Award Categories", awardcat_path%></li>
			<li><%= link_to "Prizes", prizes_path%></li>		
			<li><%= link_to "Photos & Video", photo_video_path%></li>
			<li id="last"><%= link_to "Questions", question_path %></li>
		</ul>
		<div class="clear"></div>
	</div>
	
	<div id="limiter">
		<% if flash[:notice] %>
		      <div id="notice"><%= flash[:notice] %></div>
		    <% end %>
		    <% if flash[:error] %>
		      <div id="error"><%= flash[:error] %></div>
		    <% end %>
		
		<div id="page_body">
		<%= yield %>
		</div>
		
		
			<% if mobile?%>
			<div id="switcher">
				<%= link_to "Full Site", root_url(:mobile => 0)%>	
			</div>
					
			<% end %>
	</div>


</div>
</body>
</html>
