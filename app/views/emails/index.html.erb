<h1>Listing Emails</h1>

<p><%= link_to "Back to Admin", admin_path %></p>

<table>
  <tr>
    <th>Name</th>
	<th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @emails.each do |email| %>
  <tr>
    <td class="first"><%= email.first_name %> <%= email.last_name%></td>
    <td class="first"><%= email.email %> </td>
 
    <td><%= link_to 'Edit', edit_email_path(email) %></td>
    <td><%= link_to 'Destroy', email, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

