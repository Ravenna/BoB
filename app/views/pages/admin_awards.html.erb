<p><%= link_to "Back to Admin", admin_path, :class => "btn" %><%= link_to "New Award", new_category_award_path(@stores) ,:class => "btn" %></p>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Categories</th>
    <th></th>
  </tr>

<% @awards.each do |award| %>
  <tr>
    <td class="first"><%= award.name %></td>
	<td class="second"><% award.categories.each do |category| %>
			<%= category.name %>
		<% end %>
	</td>
 
    <td>
		<% if award.id == 16 || award.id == 15 %>
			<%= link_to 'Edit', edit_category_award_path(award.categories.first.id, award ), :class => "btn" %>
		<% else %>
			<%= link_to 'Edit', edit_category_award_path(award.categories.first.id, award ), :class => "btn" %>
		<% end %>
	<%= link_to 'Destroy', award, confirm: 'Are you sure?', method: :delete, :class => "btn btn-danger" %></td>
  </tr>
<% end %>
</table>

<br />

